<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/UpdateLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="Update User Details"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userCode"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_below="@+id/UpdateLogo"
                android:text="User Code: " />

            <TextView
                android:id="@+id/userCodeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_below="@+id/UpdateLogo"
                android:layout_toRightOf="@+id/userCode"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UpdateLogo"
                android:layout_marginStart="80dp"
                android:layout_marginTop="100dp"
                android:text="Name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UpdateLogo"
                android:inputType="textCapWords"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/name"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="80dp"
                android:layout_marginTop="100dp"
                android:text="Mobile No."
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobileEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEdit"
                android:inputType="textCapWords"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/mobile"/>




            <Button
                android:id="@+id/backAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="80dp"/>

            <Button
                android:id="@+id/UpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/black"
                android:text="Update" />



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>