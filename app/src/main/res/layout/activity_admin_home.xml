<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity">

    <TextView
        android:id="@+id/homePageLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Admin Home Page"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Admin Name: "
        android:layout_below="@+id/homePageLogo" />

    <TextView
        android:id="@+id/adminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:textStyle="bold"
        android:layout_below="@+id/homePageLogo"/>

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Code: "
        android:layout_below="@+id/homePageLogo"
        android:layout_toStartOf="@+id/adminCode"
        />

    <TextView
        android:id="@+id/adminCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/homePageLogo"
        android:layout_alignParentRight="true"/>


    <Button
        android:id="@+id/view_Button"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="View Attendance"
        android:layout_below="@+id/homePageLogo"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/RomanSilver"/>

    <Button
        android:id="@+id/add_Button"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Add Employee"
        android:layout_below="@+id/homePageLogo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/WindowsBlue" />


    <Button
        android:id="@+id/edit_Button"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Edit Employee"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/add_Button"
        android:backgroundTint="@color/mint"/>

    <Button
        android:id="@+id/delete_Button"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Delete Employee"
        android:textColor="@color/black"
        android:layout_below="@+id/add_Button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/red"/>



</RelativeLayout>