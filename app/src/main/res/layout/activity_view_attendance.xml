<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAttendanceActivity">

    <TextView
        android:id="@+id/ViewAttendanceLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Attendance"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="40dp"/>

    <TextView
        android:id="@+id/empText"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_below="@+id/ViewAttendanceLogo"
        android:text="Employee Code: "/>

    <Spinner
        android:id="@+id/empSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/empText"
        android:layout_below="@+id/ViewAttendanceLogo"
        />

    <Button
        android:id="@+id/view_Attendance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ViewAttendanceLogo"/>


    <TextView
        android:id="@+id/empName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/view_Attendance"
        android:text="Employee Name: " />

    <TextView
        android:id="@+id/empNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/view_Attendance"
        android:layout_toRightOf="@+id/empName"/>

    <LinearLayout
        android:id="@+id/display"
        android:layout_below="@+id/view_Attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green"
        android:layout_marginTop="80dp">
        <TextView
            android:text="Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="4"
            android:textAlignment="center"/>
            <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:text="Time In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:text="Time Out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:text="Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:textAlignment="center"/>
    </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearRecycler"
            android:layout_below="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendanceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin ="5dp"/>

        </LinearLayout>

    <Button
        android:id="@+id/backView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/LinearRecycler"
        android:layout_marginTop="-50dp"/>




</RelativeLayout>