<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/phone_veri"
        />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/inputs"
        android:layout_below="@+id/image_view"
        android:padding="8dp"
        android:hint="Enter Phone number"
        android:textColorHint="@color/light_grey"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/phone2"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="250dp"
        android:layout_below="@+id/phone_number_input"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:hint="Enter OTP..."
        android:textColorHint="@color/light_grey"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/otp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        />



    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/verification_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"

        />



</RelativeLayout>